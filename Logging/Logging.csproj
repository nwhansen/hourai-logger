<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <RootNamespace>Hourai.Logging</RootNamespace>
    <Description>A Logging Framework Inspired by SLFJ</Description>
    <Company>Hourai</Company>
    <Copyright>Nathan Hansen</Copyright>
    <PackageLicenseUrl></PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/nwhansen/hourai-logger</PackageProjectUrl>
    <RepositoryUrl>https://github.com/nwhansen/hourai-logger</RepositoryUrl>
    <PackageTags>logger hourai</PackageTags>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageId>Hourai.Logging</PackageId>
  </PropertyGroup>

  <ItemGroup>
    <Folder Include="Properties\" />
    <Content Include="Readme.txt">
      <Pack>true</Pack>
      <PackagePath>\</PackagePath>
    </Content>
  </ItemGroup>

</Project>
